{
    "name": "چتر بازان",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": [
        "tabs",
        "declarativeContent",
        "storage",
        "clipboardWrite"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/favicon.png"
        }
    },
    "icons": {
        "128": "images/favicon.png"
    },
    "manifest_version": 2
}